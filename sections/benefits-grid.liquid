<div class="benefits-grid-wrapper">
  <div class="benefits-grid__header">
    {% if section.settings.title != blank %}
      <h2 class="benefits-grid__heading">{{ section.settings.title }}</h2>
    {% endif %}
    {% if section.settings.subtitle != blank %}
      <p class="benefits-grid__subheading">{{ section.settings.subtitle }}</p>
    {% endif %}
  </div>

  <div class="benefits-grid-container">
    <div class="benefits-grid" style="--columns: {{ section.settings.columns }}">
      {% for block in section.blocks %}
        <div class="benefits-card">
          <div class="card-inner">
            {% comment %} <div class="card-face card-front">
              <img src="{{ block.settings.image | image_url }}" alt="{{ block.settings.title }}" class="card-image" data-mobile-position="{{ block.settings.image_position }}">
              <div class="card-content">
                <h3 class="card-title">{{ block.settings.title }}</h3>
                <div class="card-description-container">
                  <p class="card-description">{{ block.settings.short_text }}</p>
                  <button class="expand-btn">
                    {{ 'plus-icon.svg' | inline_asset_content }}
                  </button>
                </div>
              </div>
            </div> {% endcomment %}
            <div class="card-face card-front">
              {% if block.settings.image_mobile != blank %}
                <img 
                  src="{{ block.settings.image | image_url }}" 
                  alt="{{ block.settings.title }}" 
                  class="card-image hidden-on-mobile"
                >
                <img 
                  src="{{ block.settings.image_mobile | image_url }}" 
                  alt="{{ block.settings.title }}" 
                  class="card-image hidden-on-desktop"
                >
              {% else %}
                <img 
                  src="{{ block.settings.image | image_url }}" 
                  alt="{{ block.settings.title }}" 
                  class="card-image"
                >
              {% endif %}

              <div class="card-content">
                <h3 class="card-title">{{ block.settings.title }}</h3>
                <div class="card-description-container">
                  <p class="card-description">{{ block.settings.short_text }}</p>
                  <button class="expand-btn">
                    {{ 'plus-icon.svg' | inline_asset_content }}
                  </button>
                </div>
              </div>
            </div>
            <div class="card-face card-back">
              <div class="card-back-content">
                <p>{{ block.settings.full_text }}</p>
                <button class="close-btn">
                  {{ 'exit-button.svg' | inline_asset_content }}
                </button>
              </div>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>

    {% comment %}
      {% if section.blocks.size > 4 %}
        <div class="view-all-btn-wrapper">
          <button
            class="view-all-btn"
            onclick="toggleAllBenefits(this)"
            data-expanded="false"
            data-more="{{ section.settings.view_more_label }}"
            data-less="{{ section.settings.view_less_label }}"
          >
            {{ section.settings.view_more_label }}
          </button>
        </div>
      {% endif %}
    {% endcomment %}
  </div>
</div>

<style>
    .benefits-grid-wrapper {
      max-width: 1280px;
      margin: 0 auto;
      padding: 0 10px;
    }

    .benefits-grid-container {
      margin-bottom: 120px;
    }

    .benefits-grid__header {
      display: flex;
      flex-direction: column;
      gap: 30px;
      padding-right: 10px;
      padding-left: 50px;
      margin-bottom: 60px;
    }

    .benefits-grid__heading {
      font-size: 42px;
      font-weight: 700;
      margin: 0;
      line-height: 30px;
      font-family: var(--font-heading-main);
    }

    .benefits-grid__subheading {
      font-size: 24px;
      color: var(--color-subtext);
      max-width: 1100px;
      line-height: 30px;
      font-weight: 700;
      margin: 0;
    }

    .benefits-grid {
      {% comment %} display: grid;
      grid-template-columns: repeat(var(--columns, 4), 1fr); {% endcomment %}
      display: flex;
      flex-wrap: wrap;
      align-items: stretch;
      gap: 20px;
    }

    .benefits-card {
      perspective: 1000px;
      position: relative;
      min-height: 360px;
      flex: 1 0 calc(25% - 20px);
      cursor: pointer;
    }

    .benefits-grid-wrapper,
    .benefits-grid-container,
    .benefits-grid,
    .benefits-card {
      overflow: visible !important;
    }


    .card-inner {
      width: 100%;
      height: 100%;
      position: relative;
    }

    .card-face {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      border-radius: 20px;
      overflow: hidden;
      backface-visibility: hidden;
      transition: transform 0.6s ease;
      display: flex;
      flex-direction: column;
      background: #F0F4F5;
    }

    .card-front {
      position: static;
      z-index: 2;
      transform: rotateY(0deg);
    }

    .card-back {
      transform: rotateY(180deg);
      z-index: 1;
      justify-content: space-between;
      padding: 20px;
    }

    .benefits-card.flipped .card-front {
      transform: rotateY(-180deg);
    }

    .benefits-card.flipped .card-back {
      transform: rotateY(0deg);
      z-index: 3;
    }

    .card-image {
      width: 100%;
      height: 180px;
      object-fit: cover;
    }

    .card-content {
      padding: 40px 20px;
      flex: 1;
      display: flex;
      flex-direction: column;
      justify-content: space-between;
    }

    .card-title {
      font-family: var(--font-heading-main);
      margin: 0 0 20px;
      font-size: 24px;
      line-height: 24px;
      color: #0B1C2F;
      font-weight: 700;
      user-select: none;
    }

    .card-description-container {
      display: flex;
      justify-content: space-between;
      align-items: flex-end;
    }

    .card-description {
      color: var(--color-subtext);
      font-size: 16px;
      line-height: 22px;
      margin: 0;
      max-width: 200px;
      user-select: none;
    }

    .expand-btn,
    .close-btn {
      border: none;
      background: transparent;
      cursor: pointer;
      padding: 0;
      width: 30px;
      height: 30px;
    }

    .close-btn {
      align-self: flex-end;
    }

    .card-back-content {
      display: flex;
      flex-direction: column-reverse;
      height: 100%;
      width: 100%;
      justify-content: start;
    }

    .card-back-content p {
      margin: 0;
      overflow-y: auto;
      max-height: calc(100% - 40px);
    }

    .hidden-on-mobile {
      display: none;
    }

    .view-all-btn-wrapper {
      text-align: center;
      margin-top: 30px;
    }

    .view-all-btn {
      background: #000;
      color: #fff;
      width: 166px;
      padding: 14px 0;
      border-radius: 16px;
      font-weight: 600;
      border: none;
      cursor: pointer;
      font-size: 12px;
      line-height: 16px;
    }

    .hidden-on-mobile {
      display: block;
    }
    .hidden-on-desktop {
      display: none;
    }

    @media (max-width: 749px) {
      .hidden-on-mobile {
        display: none !important;
      }
      .hidden-on-desktop {
        display: block !important;
      }
    }

    @media (max-width: 749px) {
      .benefits-grid-wrapper,
      .benefits-grid-container,
      .benefits-grid,
      .benefits-card {
        overflow: hidden !important;
      }
      .benefits-grid {
        flex-direction: column;
        {% comment %} grid-template-columns: 1fr; {% endcomment %}
      }

      .benefits-grid__header {
        padding: 0 10px;
        margin-bottom: 50px;
      }

      .benefits-grid__heading {
        font-size: 24px;
        line-height: 24px;
      }

      .benefits-grid__subheading {
        font-size: 16px;
        line-height: 22px;
      }

      .benefits-card {
        flex: initial;
      }

      .card-front {
        position: absolute;
      }

      .card-back-content p {
        max-height: unset;
      }

      .card-title {
        font-size: 16px;
        line-height: 18px;
        margin: 0;
      }

      .card-description {
        font-size: 12px;
        line-height: 16px;
      }

      .card-content {
        padding: 20px 10px 20px 20px;
        gap: 6px;
        justify-content: center;
      }

      .card-image {
        height: 120px;
        max-width: 120px;
      }

      .card-back {
        position: relative;
        padding: 10px 10px 10px 20px;
      }

      .card-back-content {
        gap: 0;
      }

      .card-face {
        flex-direction: row;
      }

      .benefits-card {
        height: 120px;
        min-height: unset;
      }

      .expand-btn {
        position: absolute;
        right: 10px;
        top: 50%;
        transform: translateY(-50%);
      }

      .expand-btn,
      .close-btn {
        width: 24px;
        height: 24px;
      }

      .expand-btn svg,
      .close-btn svg {
        width: 100% !important;
        height: 100% !important;
      }

      .hidden-on-mobile {
        display: none !important;
      }

      .view-all-btn-wrapper {
        display: block;
        margin-bottom: 100px;
      }

      .benefits-grid-wrapper {
        margin-bottom: 100px;
      }

      .benefits-grid-container {
        margin-bottom: 0;
      }
    }

    @media (max-width: 749px) {
      .card-image[data-mobile-position="left"] {
        object-position: left;
      }
      .card-image[data-mobile-position="right"] {
        object-position: right;
      }
      .card-image[data-mobile-position="top"] {
        object-position: top;
      }
      .card-image[data-mobile-position="bottom"] {
        object-position: bottom;
      }
      .card-image[data-mobile-position="center"] {
        object-position: center;
      }
    }

    @media (min-width: 750px) {
      .hidden-on-mobile {
        display: block !important;
      }

      .view-all-btn-wrapper {
        display: none;
      }

      .benefits-card {
        transform-style: preserve-3d;
        transition: transform 0.2s ease;
        will-change: transform;
        overflow: hidden;
      }

      .card-inner {
        height: 100%;
        transform-style: preserve-3d;
        transition: transform 0.2s ease;
      }

      .benefits-card:hover .card-inner {
        transform: perspective(1000px);
      }

      .card-image {
        object-fit: cover;
        width: 100%;
        height: 180px;
        pointer-events: none;
        backface-visibility: hidden;
      }

  @media (min-width: 750px) and (max-width: 1260px) {
    .benefits-grid {
      justify-content: center;
      gap: 20px;
    }
    .benefits-card {
      min-width: 0;
    }
    .card-title {
      white-space: normal;
      overflow: visible;
      text-overflow: clip;
      word-break: break-word;
      hyphens: auto;
      font-size: 20px;
      line-height: 1.3;
    }
    .card-description {
      font-size: 14px;
      line-height: 20px;
      max-width: 100%;
    }
    .card-image { height: 160px; }
    .card-content { padding: 24px 16px; }

    .benefits-grid__header {
      padding-left: 20px;
      padding-right: 20px;
      gap: 16px;
    }
    .benefits-grid__heading {
      font-size: 32px;
      line-height: 1.3;
      white-space: normal;
    }
    .benefits-grid__subheading {
      font-size: 18px;
      line-height: 1.4;
    }
  }

  @media (min-width: 750px) and (max-width: 1023px) {
    .benefits-card {
      flex: 0 0 calc(50% - 20px);
      min-height: 240px;
    }
  }

  @media (min-width: 1024px) and (max-width: 1260px) {
    .benefits-card {
      flex: 0 0 calc(33.333% - 20px);
      min-height: 260px;
    }
  }
  }

  @media(max-width: 400px) {
    .card-description {
      max-width: 180px;
    }
  }
</style>

<script>
  document.querySelectorAll('.benefits-card').forEach((card) => {
    card.addEventListener('click', () => {
      card.classList.toggle('flipped');
    });
  });

  if (window.innerWidth >= 750) {
    document.querySelectorAll('.benefits-card').forEach((card) => {
      const inner = card.querySelector('.card-inner');

      card.addEventListener('mousemove', (e) => {
        const rect = card.getBoundingClientRect();
        const x = e.clientX - rect.left;
        const y = e.clientY - rect.top;
        const centerX = rect.width / 2;
        const centerY = rect.height / 2;
        const rotateX = ((y - centerY) / centerY) * -6;
        const rotateY = ((x - centerX) / centerX) * 6;
        inner.style.transform = `rotateX(${rotateX}deg) rotateY(${rotateY}deg)`;
      });

      card.addEventListener('mouseleave', () => {
        inner.style.transform = `rotateX(0deg) rotateY(0deg)`;
      });
    });
  }

  function toggleAllBenefits(button) {
    const hiddenCards = document.querySelectorAll('.benefits-card.hidden-on-mobile');
    const allCards = document.querySelectorAll('.benefits-card');
    const isExpanded = button.getAttribute('data-expanded') === 'true';
    const moreLabel = button.getAttribute('data-more');
    const lessLabel = button.getAttribute('data-less');

    if (isExpanded) {
      allCards.forEach((card, index) => {
        if (index >= 4) card.classList.add('hidden-on-mobile');
      });
      button.textContent = moreLabel;
      button.setAttribute('data-expanded', 'false');
    } else {
      hiddenCards.forEach((card) => card.classList.remove('hidden-on-mobile'));
      button.textContent = lessLabel;
      button.setAttribute('data-expanded', 'true');
    }
  }
</script>

