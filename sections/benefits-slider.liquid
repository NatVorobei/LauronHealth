<div class="custom-swiper-benefits-wrapper" style="max-width: 1280px; margin: 0 auto;">
  <div class="custom-swiper-benefits-heading-container">
    {% if section.settings.title != blank %}
      <h2 class="custom-swiper-benefits-heading">{{ section.settings.title }}</h2>
    {% endif %}
    {% if section.settings.subtitle != blank %}
      <p class="custom-swiper-benefits-subheading">{{ section.settings.subtitle }}</p>
    {% endif %}
  </div>

  <div class="swiper custom-swiper-benefits">
    <div class="swiper-wrapper" style="display: flex; align-items: stretch;">
      {% for block in section.blocks %}
        <div class="swiper-slide custom-swiper-benefits-slide">
          <div class="custom-swiper-benefits-card">
            {% if block.settings.image != blank %}
              <div class="custom-swiper-benefits-image">
                <img src="{{ block.settings.image | image_url: width: 600 }}" alt="{{ block.settings.heading | escape }}">
              </div>
            {% endif %}
            <div class="custom-swiper-benefits-content">
              <h3>{{ block.settings.heading }}</h3>
              <p>{{ block.settings.text }}</p>
              {% if block.settings.link_label != blank and block.settings.link_url != blank %}
                <a href="{{ block.settings.link_url }}" class="custom-swiper-benefits-link">
                  {{ block.settings.link_label }}
                  <img class="description-arrow" src="https://cdn.shopify.com/s/files/1/0745/8786/5320/files/arrow-right.svg?v=1751981343" width="20px" height="20px"/>
                </a>
              {% endif %}
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

<style>
.custom-swiper-benefits-wrapper{
  padding-bottom: 120px;
}
.custom-swiper-benefits-heading {
  font-size: 42px;
  font-weight: 700;
  margin: 0;
  line-height: 30px;
  font-family: var(--font-heading-main);
}
.custom-swiper-benefits-subheading {
  font-size: 24px;
  color: var(--color-subtext);
  margin-bottom: 32px;
  max-width: 1100px;
  line-height: 30px;
  margin: 0;
  font-weight: 700;
}
.custom-swiper-benefits-heading-container {
  display: flex;
  flex-direction: column;
  gap: 30px;
  padding-right: 10px;
  padding-left: 50px;
  margin-bottom: 60px;
  margin-top: 120px;
}

.custom-swiper-benefits-slide {
  display: flex;
  flex: 1 0 auto;
  {% comment %} height: auto; {% endcomment %}
}

.custom-swiper-benefits-card {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  flex-grow: 1;
  background: #F0F4F5;
  border-radius: 20px;
  text-align: center;
  max-width: 400px;
  height: 100%;
  overflow: hidden;
}

.custom-swiper-benefits-image img {
  width: 100%;
  height: auto;
  display: block;
}

.custom-swiper-benefits-content {
  display: flex;
  flex-direction: column;
  flex-grow: 1;
  padding: 52px 32px 40px 32px;
}

.custom-swiper-benefits-card h3 {
  font-size: 20px;
  font-weight: 700;
  line-height: 24px;
  margin: 0 0 32px;
  font-family: var(--font-heading-main);
  {% comment %} min-height: 48px; {% endcomment %}
}

.custom-swiper-benefits-card p {
  font-size: 16px;
  line-height: 22px;
  color: var(--color-subtext);
  margin: 0 0 30px;
  flex-grow: 1;
}

.custom-swiper-benefits-link {
  color: var(--color-main-text);
  font-weight: 700;
  font-size: 18px;
  line-height: 22px;
  text-decoration: none;
  position: relative;
  display: flex;
  align-items: center;
  gap: 16px;
  align-self: end;
  font-family: var(--font-heading-main);
}

@media(max-width: 749px) {
  .custom-swiper-benefits-heading-container {
    padding: 0 10px;
    margin-top: 100px;
    margin-bottom: 50px;
  }
  .custom-swiper-benefits-heading {
    font-size: 24px;
    line-height: 24px;
  }
  .custom-swiper-benefits-subheading {
    font-size: 16px;
    line-height: 22px;
  }
  {% comment %} .custom-swiper-benefits-wrapper {
    padding-left: 10px;
  } {% endcomment %}
  .custom-swiper-benefits-content {
    padding: 20px;
  }
  .custom-swiper-benefits-card h3 {
    font-size: 16px;
    line-height: 18px;
    margin: 0 0 16px;
    min-height: 36px;
  }
  .custom-swiper-benefits-card p {
    font-size: 12px;
    line-height: 16px;
    margin: 0 0 18px;
  }
  .custom-swiper-benefits-link {
    font-size: 14px;
    line-height: 22px;
  }
  .custom-swiper-benefits .swiper-wrapper {
    margin-left: 10px;
  }
  .custom-swiper-benefits-slide:last-child {
    padding-right: 20px;
  }
}
</style>

{% javascript %}
document.addEventListener("DOMContentLoaded", function () {
  new Swiper(".custom-swiper-benefits", {
    slidesPerView: 3,
    spaceBetween: 40,
    slidesOffsetBefore: 0, 
    slidesOffsetAfter: 0,
    breakpoints: {
      0: {
        slidesPerView: 1.5,
        spaceBetween: 23,
        slidesOffsetBefore: 10
        slidesOffsetAfter: 10
      },
      768: {
        slidesPerView: 2,
      },
      1024: {
        slidesPerView: 3,
      },
    }
  });
});
{% endjavascript %}

