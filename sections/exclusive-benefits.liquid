<div class="exclusive-benefits-wrapper"
  style="
    padding-top: {{ section.settings.padding_top_desktop | default: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom_desktop | default: 0 }}px;
  "
>
<div class="exclusive-benefits-container {% if section.settings.reverse_layout %}reverse{% endif %}">
  <div class="exclusive-benefits-image">
    {% if section.settings.image %}
      <img src="{{ section.settings.image | image_url: width: 800 }}" alt="Benefits image" loading="lazy">
    {% endif %}
  </div>

  <div class="exclusive-benefits-content">
    {% if section.settings.heading %}
      <h2 class="exclusive-benefits-heading">{{ section.settings.heading }}</h2>
    {% endif %}

    <ul class="exclusive-benefits-list">
      {% for block in section.blocks %}
        {% if block.type == 'benefit' and block.settings.text != blank %}
          <li>
            <span class="benefit-icon">{{ 'checkbox-promo.svg' | inline_asset_content }}</span>
            <span class="benefit-text">{{ block.settings.text }}</span>
          </li>
        {% endif %}
      {% endfor %}
    </ul>

    {% for block in section.blocks %}
      {% if block.type == 'additional_text' and block.settings.text != blank %}
        <p class="exclusive-benefits-description">{{ block.settings.text }}</p>
      {% endif %}
    {% endfor %}

    {% for block in section.blocks %}
      {% if block.type == 'button' and block.settings.label != blank and block.settings.link != blank %}
        <a href="{{ block.settings.link }}" class="exclusive-benefits-button">{{ block.settings.label }}</a>
      {% endif %}
    {% endfor %}
  </div>
</div>
</div>
  
  <style>
    .exclusive-benefits-container {
      max-width: 1280px;
      margin: 0 auto;
      display: flex;
      align-items: stretch;
    }
  
    .exclusive-benefits-image {
      width: 50%;
      text-align: center;
      display: flex;
      justify-content: center;
      align-items: center;
    }
  
    .exclusive-benefits-image img {
      max-width: 100%;
      height: 100%;
      border-top-left-radius: 20px;
      border-bottom-left-radius: 20px;
      object-fit: cover;
      object-position: center;
    }
  
    .exclusive-benefits-content {
      background-color: #f4f6f8;
      padding: 60px 0 69px 60px;
      width: 50%;
      display: flex;
      flex-direction: column;
      justify-content: center;
      border-top-right-radius: 20px;
      border-bottom-right-radius: 20px;
    }
  
    .exclusive-benefits-heading {
      font-size: 28px;
      font-weight: 700;
      margin-bottom: 38px;
      line-height: 34px;
      font-family: var(--font-heading-main);
      color: var(--color-main-text);
    }
  
    .exclusive-benefits-list {
      list-style: none;
      padding: 0;
      margin: 0;
      display: flex;
      flex-direction: column;
      gap: 13px;
    }
  
    .exclusive-benefits-list li {
      display: flex;
      align-items: center;
      gap: 12px;
      font-size: 18px;
      line-height: 18px;
      color: var(--color-main-text);
    }
  
    .benefit-icon svg {
      width: 20px;
      height: 20px;
      flex-shrink: 0;
      margin-top: 3px;
    }

    .exclusive-benefits-description {
      font-size: 16px;
      line-height: 20px;
      color: var(--color-main-text);
    }
    
    .exclusive-benefits-button {
      display: inline-block;
      margin-top: 40px;
      padding: 20px 28px;
      background-color: #000;
      width: fit-content;
      color: #fff;
      border-radius: 20px;
      text-decoration: none;
      font-weight: 700;
      font-size: 14px;
      line-height: 12px;
    }
    
    .exclusive-benefits-button:hover {
      background-color: #333;
    }
    
    .exclusive-benefits-container.reverse {
      flex-direction: row-reverse;
    }

    .exclusive-benefits-container.reverse .exclusive-benefits-image img {
      border-top-left-radius: 0px;
      border-bottom-left-radius: 0px;
      border-top-right-radius: 20px;
      border-bottom-right-radius: 20px;
    }

    .exclusive-benefits-container.reverse .exclusive-benefits-content {
      border-top-right-radius: 0px;
      border-bottom-right-radius: 0px;
      border-top-left-radius: 20px;
      border-bottom-left-radius: 20px;
    }

    .exclusive-benefits-container.reverse .exclusive-benefits-content {
      padding: 60px 60px 69px 60px;
    }
  
    @media (max-width: 749px) {
      .exclusive-benefits-wrapper {
        padding-top: {{ section.settings.padding_top_mobile | default: 0 }}px !important;
        padding-bottom: {{ section.settings.padding_bottom_mobile | default: 0 }}px !important;
      }

      .exclusive-benefits-container.reverse {
        flex-direction: column-reverse;
      }

      .exclusive-benefits-container {
        flex-direction: column;
        padding: 0 10px;
      }
  
      .exclusive-benefits-wrapper {
        padding: 0 10px;
      }
  
      .exclusive-benefits-image,
      .exclusive-benefits-content {
        width: 100%;
      }
  
      .exclusive-benefits-content,
      .exclusive-benefits-container.reverse .exclusive-benefits-content {
        padding: 67px 10px;
      }
  
      .exclusive-benefits-heading {
        font-size: 24px;
        line-height: 20px;
        margin-bottom: 16px;
      }
 
      .exclusive-benefits-container.reverse .exclusive-benefits-heading {
        font-size: 20px;
        line-height: 26px;
      }
  
      .exclusive-benefits-list li {
        font-size: 14px;
        line-height: 16px;
      }
  
      .exclusive-benefits-image img {
        border-top-right-radius: 20px;
        border-bottom-left-radius: 0px;
        aspect-ratio: 4 / 3;
      }
  
      .exclusive-benefits-content {
        border-top-right-radius: 0px;
        border-bottom-left-radius: 20px;
      }

      .exclusive-benefits-container.reverse .exclusive-benefits-content {
        text-align: center;
      }

      .exclusive-benefits-description {
        font-size: 12px;
        line-height: 16px;
      }

      .exclusive-benefits-button {
        align-self: center;
        font-size: 12px;
        line-height: 16px;
        padding: 14px 17px;
        border-radius: 16px;
        margin-top: 30px;
      }

      .exclusive-benefits-container.reverse .exclusive-benefits-image img {
        border-top-left-radius: 0px;
        border-bottom-left-radius: 20px;
        border-top-right-radius: 0px;
        border-bottom-right-radius: 20px;
      }
  
      .exclusive-benefits-container.reverse .exclusive-benefits-content {
        border-top-right-radius: 20px;
        border-bottom-right-radius: 0px;
        border-top-left-radius: 20px;
        border-bottom-left-radius: 0px;
      }
    }
  </style>
  
