<div
  class="facts-grid-wrapper"
  style="
    padding-top: {{ section.settings.padding_top_desktop | default: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom_desktop | default: 0 }}px;
    background-color: {{ section.settings.background }};
  "
>
  <div class="facts-grid__bg" aria-hidden="true">
    {%- if section.settings.use_video_desktop -%}
      {%- if section.settings.video_desktop_webm != blank or section.settings.video_desktop_mp4 != blank -%}
        <video
          class="facts-grid__video facts-grid__video--desktop"
          autoplay
          muted
          loop
          playsinline
          preload="metadata"
          {% if section.settings.video_desktop_poster != blank %}poster="{{ section.settings.video_desktop_poster }}"{% endif %}
        >
          {%- if section.settings.video_desktop_webm != blank -%}
            <source src="{{ section.settings.video_desktop_webm }}" type="video/webm">
          {%- endif -%}
          {%- if section.settings.video_desktop_mp4 != blank -%}
            <source src="{{ section.settings.video_desktop_mp4 }}" type="video/mp4">
          {%- endif -%}
        </video>
      {%- endif -%}
    {%- endif -%}


    {%- if section.settings.use_video_mobile -%}
      {%- if section.settings.video_mobile_webm != blank or section.settings.video_mobile_mp4 != blank -%}
        <video
          class="facts-grid__video facts-grid__video--mobile"
          autoplay
          muted
          loop
          playsinline
          preload="metadata"
          {% if section.settings.video_mobile_poster != blank %}poster="{{ section.settings.video_mobile_poster }}"{% endif %}
        >
          {%- if section.settings.video_mobile_webm != blank -%}
            <source src="{{ section.settings.video_mobile_webm }}" type="video/webm">
          {%- endif -%}
          {%- if section.settings.video_mobile_mp4 != blank -%}
            <source src="{{ section.settings.video_mobile_mp4 }}" type="video/mp4">
          {%- endif -%}
        </video>
      {%- endif -%}
    {%- endif -%}
  </div>

  {% if section.settings.title != blank %}
    <h2 class="facts-grid__heading">{{ section.settings.title }}</h2>
  {% endif %}

  <div class="facts-grid">
    {% for block in section.blocks %}
      <div class="facts-grid__item">
        {% if block.settings.image != blank %}
          <img
            src="{{ block.settings.image | img_url: '100x' }}"
            alt="{{ block.settings.title }}"
            class="facts-grid__icon"
          >
        {% endif %}
        <h3 class="facts-grid__title">{{ block.settings.title }}</h3>
        <p class="facts-grid__desc">{{ block.settings.description }}</p>
      </div>
    {% endfor %}
  </div>
</div>


<style>
    .facts-grid-wrapper {
