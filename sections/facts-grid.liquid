  }

  .facts-grid__desc {
    font-size: 14px;
    line-height: 18px;
    color: #87878D;
    text-align: center;
    letter-spacing: 0;
  }


  .facts-grid-wrapper {
    isolation: isolate;
    --fg-overlay-rgb: 255, 255, 255;
    --fg-alpha: 0.6;
    --fg-blur: 2px;
    --fg-bright: 1.1;
    --fg-sat: 0.9;
  }

  .facts-grid-wrapper {
    --fg-overlay-rgb: {{ section.settings.overlay_color | default: '#ffffff' | color_to_rgb | remove: 'rgb(' | remove: ')' }};
    --fg-alpha: {{ section.settings.overlay_alpha | default: 0.6 }};
    --fg-blur: {{ section.settings.overlay_blur | default: 2 }}px;
    --fg-bright: {{ section.settings.overlay_brightness | default: 1.1 }};
    --fg-sat: {{ section.settings.overlay_saturate | default: 0.9 }};
  }


  .facts-grid__bg {
    position: absolute;
    inset: 0;
    z-index: 0;  
    pointer-events: none;
    overflow: hidden;
  }

  
  .facts-grid__bg::after {
    content: "";
    position: absolute; inset: 0;
    z-index: 1;
    pointer-events: none;
    background: rgba(var(--fg-overlay-rgb), var(--fg-alpha)) !important;
    backdrop-filter: blur(var(--fg-blur)) brightness(var(--fg-bright)) saturate(var(--fg-sat));
    -webkit-backdrop-filter: blur(var(--fg-blur)) brightness(var(--fg-bright)) saturate(var(--fg-sat));
  }

  
  .facts-grid__heading,
  .facts-grid,
  .facts-grid__item {
    position: relative;
    z-index: 2;
  }

  
  @supports not ((backdrop-filter: blur(2px)) or (-webkit-backdrop-filter: blur(2px))) {
    .facts-grid__bg::after {
      background: rgba(var(--fg-overlay-rgb), 0.82) !important;
    }
    .facts-grid__video {
      filter: brightness(1.12) saturate(0.95);
    }
  }


  @media (max-width: 1240px) {
    .facts-grid {
        padding: 0 10px;
    }
  }

  @media (max-width: 1024px) {
    .facts-grid {
      grid-template-columns: repeat(3, 1fr);
      gap: 30px 20px;
    }
  }

  @media (max-width: 749px) {
    .facts-grid-wrapper {
      padding-top: {{ section.settings.padding_top_mobile | default: 0 }}px !important;
      padding-bottom: {{ section.settings.padding_bottom_mobile | default: 0 }}px !important;
    }

    .facts-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 20px;   
    }

    .facts-grid__heading {
      font-size: 24px;
       line-height: 24px;
      margin-bottom: 30px;
    }
    .facts-grid__title {
        font-size: 16px;
        line-height: 16px;
        min-height: 32px;
    }
    .facts-grid__video--desktop { display: none; }
    .facts-grid__video--mobile { display: block; }
  }
</style>

