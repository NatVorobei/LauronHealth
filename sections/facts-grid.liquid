<div class="facts-grid-wrapper" 
     style="
        padding-top: {{ section.settings.padding_top_desktop | default: 0 }}px;
        padding-bottom: {{ section.settings.padding_bottom_desktop | default: 0 }}px;
     ">
  {% if section.settings.title != blank %}
    <h2 class="facts-grid__heading">{{ section.settings.title }}</h2>
  {% endif %}

  <div class="facts-grid">
    {% for block in section.blocks %}
      <div class="facts-grid__item">
        {% if block.settings.image != blank %}
          <img src="{{ block.settings.image | img_url: '100x' }}" alt="{{ block.settings.title }}" class="facts-grid__icon">
        {% endif %}
        <h3 class="facts-grid__title">{{ block.settings.title }}</h3>
        <p class="facts-grid__desc">{{ block.settings.description }}</p>
      </div>
    {% endfor %}
  </div>
</div>

<style>
  .facts-grid__heading {
    font-size: 42px;
    font-weight: 700;
    font-family: var(--font-heading-main);
    color: var(--color-main-text);
    text-align: center;
    margin-bottom: 80px;
  }

  .facts-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 40px 30px;
    max-width: 1200px;
    margin: 0 auto;
  }

  .facts-grid__item {
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  .facts-grid__icon {
    width: 60px;
    height: 60px;
    object-fit: contain;
  }

  .facts-grid__title {
    font-size: 20px;
    font-weight: 700;
    font-family: var(--font-heading-main);
    line-height: 24px;
    color: var(--color-main-text);
  }

  .facts-grid__desc {
    font-size: 14px;
    line-height: 18px;
    color: #87878D;
  }

  @media (max-width: 1024px) {
    .facts-grid {
      grid-template-columns: repeat(3, 1fr);
      gap: 30px 20px;
    }
  }

  @media (max-width: 749px) {
    .facts-grid-wrapper {
      padding-top: {{ section.settings.padding_top_mobile | default: 0 }}px !important;
      padding-bottom: {{ section.settings.padding_bottom_mobile | default: 0 }}px !important;
    }

    .facts-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 20px;
    }

    .facts-grid__heading {
      font-size: 28px;
      margin-bottom: 20px;
    }
  }
</style>


{% schema %}
{
  "name": "Facts Grid",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Заголовок",
      "default": "Наші переваги"
    },
    {
        "type": "range",
        "id": "padding_top_desktop",
        "label": "Padding зверху (десктоп)",
        "default": 40,
        "min": 0,
        "max": 160,
        "step": 4,
        "unit": "px"
      },
      {
        "type": "range",
        "id": "padding_bottom_desktop",
        "label": "Padding знизу (десктоп)",
        "default": 0,
        "min": 0,
        "max": 160,
        "step": 4,
        "unit": "px"
      },
      {
        "type": "range",
        "id": "padding_top_mobile",
        "label": "Padding зверху (мобілка)",
        "default": 0,
        "min": 0,
        "max": 160,
        "step": 4,
        "unit": "px"
      },
      {
        "type": "range",
        "id": "padding_bottom_mobile",
        "label": "Padding знизу (мобілка)",
        "default": 0,
        "min": 0,
        "max": 160,
        "step": 4,
        "unit": "px"
      }
],
"blocks": [
    {
      "type": "benefit",
      "name": "Картка переваги",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Зображення"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Заголовок",
          "default": "Заголовок картки"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Опис",
          "default": "Опис картки"
        }
      ]
    }
  ],
  "max_blocks": 20,
  "presets": [
    {
      "name": "Facts Grid",
      "category": "Custom"
    }
  ]
}
{% endschema %}