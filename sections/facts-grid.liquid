{% comment %} <div
  class="facts-grid-wrapper"
  style="
    padding-top: {{ section.settings.padding_top_desktop | default: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom_desktop | default: 0 }}px;
    background-color: {{ section.settings.background }};
  "
>
  {% if section.settings.title != blank %}
    <h2 class="facts-grid__heading">{{ section.settings.title }}</h2>
  {% endif %}

  <div class="facts-grid">
    {% for block in section.blocks %}
      <div class="facts-grid__item">
        {% if block.settings.image != blank %}
          <img
            src="{{ block.settings.image | img_url: '100x' }}"
            alt="{{ block.settings.title }}"
            class="facts-grid__icon"
          >
        {% endif %}
        <h3 class="facts-grid__title">{{ block.settings.title }}</h3>
        <p class="facts-grid__desc">{{ block.settings.description }}</p>
      </div>
    {% endfor %}
  </div>
</div>

<style>
  .facts-grid__heading {
    font-size: 42px;
    font-weight: 700;
    font-family: var(--font-heading-main);
    color: var(--color-main-text);
    text-align: center;
    margin-bottom: 80px;
    letter-spacing: 0;
  }

  .facts-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 60px 90px;
    max-width: 1160px;
    margin: 0 auto;
  }

  .facts-grid__item {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 20px;
  }

  .facts-grid__icon {
    width: 60px;
    height: 60px;
    object-fit: contain;
  }

  .facts-grid__title {
    display: flex;
    align-items: center;
    font-size: 20px;
    font-weight: 700;
    font-family: var(--font-heading-main);
    line-height: 24px;
    color: var(--color-main-text);
    text-align: center;
    letter-spacing: 0;
    min-height: 48px;
  }

  .facts-grid__desc {
    font-size: 14px;
    line-height: 18px;
    color: #87878D;
    text-align: center;
    letter-spacing: 0;
  }

  @media (max-width: 1240px) {
    .facts-grid {
        padding: 0 10px;
    }
  }

  @media (max-width: 1024px) {
    .facts-grid {
      grid-template-columns: repeat(3, 1fr);
      gap: 30px 20px;
    }
  }

  @media (max-width: 749px) {
    .facts-grid-wrapper {
      padding-top: {{ section.settings.padding_top_mobile | default: 0 }}px !important;
      padding-bottom: {{ section.settings.padding_bottom_mobile | default: 0 }}px !important;
    }

    .facts-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 20px;   
    }

    .facts-grid__heading {
      font-size: 24px;
       line-height: 24px;
      margin-bottom: 30px;
    }
    .facts-grid__title {
        font-size: 16px;
        line-height: 16px;
        min-height: 32px;
    }
  }
</style>

{% schema %}
