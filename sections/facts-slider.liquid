<div class="facts-slider-wrapper">
  <div class="facts-slider-container">
    <div class="facts-slider__header">
      {% if section.settings.title != blank %}
        <h2 class="facts-slider__heading">{{ section.settings.title }}</h2>
      {% endif %}
      {% if section.settings.subtitle != blank %}
        <p class="facts-slider__subheading">{{ section.settings.subtitle }}</p>
      {% endif %}
    </div>
  </div>
</div>

<style>
  .facts-slider-wrapper {
    background-image: url('https://cdn.shopify.com/s/files/1/0745/8786/5320/files/facts-background.png?v=1752072333');
    background-repeat: no-repeat;
  }
  .facts-slider-container {
    max-width: 1280px;
    margin: 0 auto;
  }

  .facts-slider__header {
    display: flex;
    flex-direction: column;
    gap: 30px;
    padding-top: 60px;
    padding-bottom: 60px;
    max-width: 800px;
    margin: 0 auto;
    text-align: center;
  }

  .facts-slider__heading {
    font-size: 42px;
    font-weight: 700;
    margin: 0;
    line-height: 30px;
  }

  .facts-slider__subheading {
    font-size: 24px;
    color: #87878D;
    max-width: 1100px;
    line-height: 30px;
    font-weight: 700;
    margin: 0;
  }
</style>
{% schema %}
  {
    "name": "Facts slider",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Заголовок",
        "default": "Заголовок"
      },
      {
        "type": "textarea",
        "id": "subtitle",
        "label": "Підзаголовок",
        "default": "Підзаголовок"
      },
    ],
    "presets": [
    {
      "name": "Facts slider",
      "category": "Custom"
    }
  ]
  }
{% endschema %}