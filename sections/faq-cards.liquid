<section class="faq-card-section" style="
    padding-top: {{ section.settings.padding_top_desktop | default: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom_desktop | default: 0 }}px;
  ">
    <div class="faq-card-container">
      <div class="faq-card__header">
        {% if section.settings.section_title != blank %}
          <h2 class="faq-card__heading">{{ section.settings.section_title }}</h2>
        {% endif %}
      </div>
  
      <div class="faq-card-list">
        {% for block in section.blocks %}
          {% assign icon = block.settings.icon %}
          {% assign title = block.settings.title %}
          {% assign text = block.settings.text %}
          {% comment %} {% assign show_button = block.settings.show_button %} {% endcomment %}
          {% assign button_text = block.settings.button_text %}
          {% assign button_link = block.settings.button_link %}
  
          <div class="faq-card-item">
            {% if icon != blank %}
              <img class="faq-card-icon" src="{{ icon | img_url: '100x' }}" alt="Icon" />
            {% endif %}
            <h3 class="faq-card-title">{{ title }}</h3>
            <p class="faq-card-text">{{ text }}</p>
            {% if button_text != blank %}
              <a class="faq-card-button" href="{{ button_link }}">{{ button_text }}</a>
            {% endif %}
          </div>
        {% endfor %}
      </div>
    </div>
  </section>

  <style>
    .faq-card-section {
        padding-top: 120px;
        background: #fff;
    }
      .faq-card-container {
        max-width: 1280px;
        margin: 0 auto;
      }
      .faq-card__header {
        display: flex;
        flex-direction: column;
        align-items: start;
        gap: 30px;
        padding: 0 50px 60px 50px;
      }
      .faq-card__heading {
        font-size: 42px;
        font-weight: 700;
        line-height: 30px;
        color: var(--color-main-text);
        font-family: var(--font-heading-main);
        margin: 0;
      }
      .faq-card-list {
        display: flex;
        justify-content: space-between;
        align-items: stretch;
        gap: 20px;
        flex-wrap: wrap;
      }
      .faq-card-item {
        display: flex;
        flex-direction: column;
        align-items: center;
        border: 1px solid var(--color-main-text);
        max-width: 370px;
        padding: 40px 20px;
        border-radius: 12px;
        text-align: center;
      }
      .faq-card-icon {
        margin-bottom: 27px;
        width: 40px;
        height: 40px;
      }
      .faq-card-title {
        font-size: 20px;
        font-weight: 700;
        margin-bottom: 12px;
        color: var(--color-main-text);
      }
      .faq-card-text {
        font-size: 16px;
        line-height: 22px;
        color: var(--color-main-text);
      }
      .faq-card-button {
        margin-top: 20px;
        padding: 10px 20px;
        border: none;
        background-color: var(--color-main-text);
        color: #fff;
        border-radius: 6px;
        font-weight: 600;
        text-decoration: none;
        transition: background-color 0.3s ease;
      }
      .faq-card-button:hover {
        background-color: #444;
      }

      @media(max-width: 749px) {
        .faq-card-section {
          padding-top: {{ section.settings.padding_top_mobile | default: 0 }}px !important;
          padding-bottom: {{ section.settings.padding_bottom_mobile | default: 0 }}px !important;
        }
      }
      
      @media(max-width: 989px) {
        .faq-card-list {
          flex-direction: column;
          align-items: center;
          padding: 0 10px;
        }
        .faq-card__heading {
          font-size: 28px;
          line-height: 32px;
        }
      }      
  </style>

  {% schema %}
  {
    "name": "FAQ Cards Section",
    "settings": [
      {
        "type": "text",
        "id": "section_title",
        "label": "Заголовок секції",
        "default": "Часті запитання"
      },
      {
        "type": "header",
        "content": "Paddings"
      },
      {
        "type": "range",
        "id": "padding_top_desktop",
        "label": "Padding зверху (десктоп)",
        "default": 40,
        "min": 0,
        "max": 160,
        "step": 4,
        "unit": "px"
      },
      {
        "type": "range",
        "id": "padding_bottom_desktop",
        "label": "Padding знизу (десктоп)",
        "default": 0,
        "min": 0,
        "max": 160,
        "step": 4,
        "unit": "px"
      },
      {
        "type": "range",
        "id": "padding_top_mobile",
        "label": "Padding зверху (мобілка)",
        "default": 0,
        "min": 0,
        "max": 160,
        "step": 4,
        "unit": "px"
      },
      {
        "type": "range",
        "id": "padding_bottom_mobile",
        "label": "Padding знизу (мобілка)",
        "default": 0,
        "min": 0,
        "max": 160,
        "step": 4,
        "unit": "px"
      }
    ],
    "blocks": [
      {
        "type": "faq_card",
        "name": "FAQ Картка",
        "settings": [
          {
            "type": "image_picker",
            "id": "icon",
            "label": "Іконка"
          },
          {
            "type": "text",
            "id": "title",
            "label": "Заголовок",
            "default": "Запитання"
          },
          {
            "type": "textarea",
            "id": "text",
            "label": "Опис",
            "default": "Відповідь на запитання"
          },
          {
            "type": "text",
            "id": "button_text",
            "label": "Текст кнопки",
            "default": "Дізнатися більше"
          },
          {
            "type": "url",
            "id": "button_link",
            "label": "Посилання кнопки",
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "FAQ Cards",
        "blocks": [
          {
            "type": "faq_card"
          },
          {
            "type": "faq_card"
          },
          {
            "type": "faq_card"
          }
        ]
      }
    ]
  }
  {% endschema %}
  