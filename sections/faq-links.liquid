<div class="faq-tabs-wrapper">
  <div class="faq-tabs-menu">
    {% if section.settings.tabs_title != blank %}
      <h2 class="faq-tabs-wrapper__title">{{ section.settings.tabs_title }}</h2>
    {% endif %}

    <ul class="faq-tabs-list desktop-only">
      {% assign tabs = section.blocks | where: 'type', 'tab' %}
      {% for tab in tabs %}
        <li class="faq-tabs-list-item">
          <a class="faq-tab-button" href="#tab-{{ tab.settings.tab_id }}">{{ tab.settings.tab_title }}</a>
        </li>
      {% endfor %}
    </ul>

    <div class="faq-tabs-select-wrapper mobile-only">
      <select class="faq-tabs-select" onchange="if(this.value) window.location.href=this.value">
        {% for tab in tabs %}
          <option value="#tab-{{ tab.settings.tab_id }}">{{ tab.settings.tab_title }}</option>
        {% endfor %}
      </select>
      <span class="custom-select-icon">{{ 'faqs-caret.svg' | inline_asset_content }}</span>
    </div>
  </div>

  <div class="faq-tabs-content">
    {% assign groups = section.blocks | where: 'type', 'faq_group' %}
    {% for group in groups %}
      <div id="tab-{{ group.settings.parent_tab }}" class="faq-group">
        <h3 class="faq-tabs-content__title">{{ group.settings.group_title }}</h3>
        {% comment %}
          {% for i in (1..10) %}
            {% capture question_key %}q{{ i }}{% endcapture %}
            {% capture answer_key %}a{{ i }}{% endcapture %}
            {% assign question = group.settings[question_key] %}
            {% assign answer = group.settings[answer_key] %}
            {% if question != blank and answer != blank %}
              <div class="accordion">
                <details>
                  <summary>
                    <h4 class="accordion__title faqs">{{ question }}</h4>
                    <span class="accordion-toggle-icon">
                      <span class="icon-plus">{{ 'plus-icon.svg' | inline_asset_content }}</span>
                      <span class="icon-minus">{{ 'exit-button.svg' | inline_asset_content }}</span>
                    </span>
                  </summary>
                  <div class="accordion__content rte faqs">
                    {{ answer }}
                  </div>
                </details>
              </div>
            {% endif %}
          {% endfor %}
        {% endcomment %}
        {% for i in (1..10) %}
          {% capture question_key %}q{{ i }}{% endcapture %}
          {% capture answer_key %}a{{ i }}{% endcapture %}
          {% capture image_key %}img{{ i }}{% endcapture %}
          {% assign question = group.settings[question_key] %}
          {% assign answer = group.settings[answer_key] %}
          {% assign image = group.settings[image_key] %}
          {% if question != blank and answer != blank %}
            <div class="accordion">
              <details>
                <summary>
                  <h4 class="accordion__title faqs">{{ question }}</h4>
                  <span class="accordion-toggle-icon">
                    <span class="icon-plus">{{ 'plus-icon.svg' | inline_asset_content }}</span>
                    <span class="icon-minus">{{ 'exit-button.svg' | inline_asset_content }}</span>
                  </span>
                </summary>
                <div class="accordion__content rte faqs">
                  {{ answer }}
                  {% if image != blank %}
                    <div class="faq-answer-image">
                      <img
                        src="{{ image | image_url: width: 1400 }}"
                        srcset="
                          {{ image | image_url: width: 560 }} 560w,
                          {{ image | image_url: width: 840 }} 840w,
                          {{ image | image_url: width: 1120 }} 1120w,
                          {{ image | image_url: width: 1400 }} 1400w
                        "
                        sizes="(max-width: 749px) 100vw, 736px"
                        alt="{{ question | escape }}"
                        loading="lazy"
                      >
                    </div>
                  {% endif %}
                </div>
              </details>
            </div>
          {% endif %}
        {% endfor %}
      </div>
    {% endfor %}
  </div>
</div>

<script>
  document.querySelectorAll('.faq-tab-button').forEach((link) => {
    link.addEventListener('click', function (e) {
      e.preventDefault();
      const target = document.querySelector(this.getAttribute('href'));
      if (target) {
        window.scrollTo({
          top: target.offsetTop - 100,
          behavior: 'smooth',
        });
      }
    });
  });
</script>

<style>
  .faq-tabs-wrapper .accordion__title {
    font-weight: 600;
  }
  .faq-tabs-wrapper {
    max-width: 1160px;
    margin: 0 auto;
    display: flex;
    gap: 40px;
    width: 100%;
    justify-content: space-between;
  }

  .faq-tabs-wrapper__title,
  .faq-tabs-content__title {
    font-size: 28px;
    line-height: 18px;
    font-weight: 700;
    color: var(--color-main-text);
    font-family: var(--font-heading-main);
    margin-bottom: 24px;
  }

  .faq-tabs-menu {
    position: sticky;
    top: 60px;
    align-self: flex-start;
  }

  .faq-tabs-content {
    max-width: 736px;
    display: flex;
    flex-direction: column;
    gap: 60px;
  }

  .faq-tabs-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-wrap: wrap;
    gap: 12px;
  }

  .faq-tabs-list-item {
    min-width: 300px;
    padding: 16px 0;
    border-bottom: 1px solid #D7D7D7;
  }

  .faq-tabs-list-item:first-child {
    border-top: 1px solid #D7D7D7;
  }

  .faq-tab-button {
    display: inline-block;
    background: none;
    border: none;
    color: #87878D;
    font-size: 16px;
    line-height: 16px;
    font-family: var(--font-heading-main);
    text-decoration: none;
  }

  .faq-tab-button:hover {
    color: var(--color-main-text);
    font-weight: 600;
  }

  .faq-tab-content {
    margin-bottom: 32px;
  }

  .accordion__title.faqs {
    font-size: 16px;
    line-height: 22px;
  }

  .accordion__content.faqs p {
    font-size: 14px;
    line-height: 20px;
    color: var(--color-main-text);
  }

  .desktop-only {
    display: block;
  }

  .mobile-only {
    display: none;
  }

  @media screen and (max-width: 1180px) {
    .faq-tabs-wrapper {
      padding: 0 10px;
    }
  }

  @media screen and (max-width: 749px) {
    .faq-tabs-wrapper {
      padding: 0 10px;
      flex-direction: column;
    }

    .faq-tabs-wrapper__title,
    .faq-tabs-content__title {
      font-size: 20px;
      line-height: 16px;
    }

    .faq-tabs-list.desktop-only {
      display: none;
    }

    .mobile-only {
      display: block;
      width: 100%;
      margin-bottom: 24px;
    }

    .faq-tabs-select {
      width: 100%;
      padding: 12px 40px 12px 12px;
      font-size: 14px;
      line-height: 16px;
      font-family: var(--font-heading-main);
      border: 1px solid #D7D7D7;
      border-radius: 16px;
      background-color: #fff;
      color: #87878D;
      cursor: pointer;
      appearance: none;
      -webkit-appearance: none;
      -moz-appearance: none;
    }

    .faq-tabs-select-wrapper {
      position: relative;
      display: block;
      width: 100%;
    }

    .custom-select-icon {
      position: absolute;
      right: 16px;
      top: 50%;
      transform: translateY(-50%);
      pointer-events: none;
      display: flex;
      align-items: center;
    }

    .faq-tabs-menu {
      width: 100%;
      background: #fff;
      padding-top: 63px;
      z-index: 1;
      top: 0;
      {% comment %} top: 0;
      padding-top: 20px; {% endcomment %}
      {% comment %} z-index: 40; {% endcomment %}
    }
  }
</style>

