<script>
  document.addEventListener('DOMContentLoaded', function () {
    function initRotatingWords(containerId, itemHeight) {
      const container = document.getElementById(containerId);
      if (!container) return;

      const items = container.querySelectorAll('.word-item');
      const total = items.length;
      let index = 0;

      function loopWords() {
        index++;
        container.style.transition = 'transform 0.7s ease-in-out';
        container.style.transform = `translateY(-${itemHeight * index}px)`;

        if (index === total - 1) {
          setTimeout(() => {
            container.style.transition = 'none';
            container.style.transform = 'translateY(0)';
            index = 0;
          }, 700);
        }
      }

      setInterval(loopWords, 2500);
    }

    initRotatingWords('rotating-words', 55); 
    initRotatingWords('rotating-words-mobile', 35); 
  });
</script>

