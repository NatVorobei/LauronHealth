<section class="our-values-section">
    <div class="our-values-container">
      <div class="our-values__header">
        {% if section.settings.section_title != blank %}
          <h2 class="our-values__heading">{{ section.settings.section_title }}</h2>
        {% endif %}
      </div>
  
      <div class="our-values-steps">
        {% for i in (1..3) %}
          {% capture icon_key %}value{{ i }}_icon{% endcapture %}
          {% capture title_key %}value{{ i }}_title{% endcapture %}
          {% capture text_key %}value{{ i }}_text{% endcapture %}
        
          {% assign icon = section.settings[icon_key] %}
          {% assign title = section.settings[title_key] %}
          {% assign text = section.settings[text_key] %}
        
          <div class="our-values-step-card">
            {% if icon != blank %}
              <img class="our-values-icon" src="{{ icon | img_url: '100x' }}" alt="Step {{ i }} Icon" />
            {% endif %}
            <h3 class="our-values-step-title">
              {{ title }}
            </h3>
            <p class="our-values-step-text">
              {{ text }}
            </p>
          </div>
        {% endfor %}
      </div>
    </div>
  </section>
  
  <style>
  .our-values-section {
    padding-top: 120px;
    background: #fff;
  }
  .our-values-container {
    max-width: 1280px;
    margin: 0 auto;
  }
  .our-values__header {
    display: flex;
    flex-direction: column;
    align-items: start;
    gap: 30px;
    padding-right: 10px;
    padding-left: 50px;
    margin-bottom: 60px;
  }
  .our-values__heading {
    font-size: 42px;
    font-weight: 700;
    margin: 0;
    line-height: 30px;
    color: var(--color-main-text);
    font-family: var(--font-heading-main);
  }
  .our-values-steps {
    display: flex;
    justify-content: space-between;
    align-items: stretch;
    gap: 20px;
    width: 100%;
  }
  .our-values-step-card {
    display: flex;
    flex-direction: column;
    align-items: center;
    max-width: 320px;
    border-radius: 20px;
    border-radius: 12px;
    height: auto;
  }
  .our-values-icon {
    margin-bottom: 40px;
    width: 60px;
    height: 60px;
  }
  .our-values-step-title {
    font-size: 20px;
    line-height: 22px;
    font-weight: 700;
    margin-bottom: 20px;
    color: var(--color-main-text);
  }
  .our-values-step-text {
    font-size: 16px;
    line-height: 22px;
    color: var(--color-main-text);
    text-align: center;
  }

  @media(max-width: 749px) {
    .our-values-section {
      padding-bottom: 100px;
      padding-top: 60px;
    }
    .our-values__header {
      padding: 0 10px;
      margin-bottom: 50px;
    }
    .our-values__heading {
      font-size: 24px;
      line-height: 24px;
    }
    .our-values-step-card {
      max-width: 280px;
    }
    .our-values-step-title {
      font-size: 16px;
      line-height: 20px;
      margin-bottom: 16px;
    }
    .our-values-step-text {
      font-size: 12px;
      line-height: 16px;
    }
    .our-values-icon {
      margin-bottom: 30px;
      width: 40px;
      height: 40px;
    }
  }
  
  @media(max-width: 989px) {
    .our-values-steps {
      flex-direction: column;
      align-items: center;
      padding: 0 10px;
    }
  }
  </style>
  
