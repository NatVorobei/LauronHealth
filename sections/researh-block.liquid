<div class="research-block">
    <div class="research-block__container">
      <div class="research-block__left">
        {% if section.settings.heading != blank %}
          <h2 class="research-block__heading">{{ section.settings.heading }}</h2>
        {% endif %}
  
        <div class="research-block__divider"> </div>
  
        <div class="research-block__group">
          <h3>{{ section.settings.title_goal }}</h3>
          <div class="rte">{{ section.settings.content_goal }}</div>
        </div>
  
        <div class="research-block__group">
          <h3>{{ section.settings.title_duration }}</h3>
          <div class="rte">{{ section.settings.content_duration }}</div>
        </div>
  
        <div class="research-block__group">
          <h3>{{ section.settings.title_participants }}</h3>
          <div class="rte">{{ section.settings.content_participants }}</div>
        </div>
  
        <div class="research-block__group">
          <h3>{{ section.settings.title_parameters }}</h3>
          <div class="rte">{{ section.settings.content_parameters }}</div>
        </div>
  
        <div class="research-block__group">
          <h3>{{ section.settings.title_expectations }}</h3>
          <div class="rte">{{ section.settings.content_expectations }}</div>
        </div>
  
        <div class="research-block__group">
          <h3>{{ section.settings.title_link }}</h3>
          <a href="{{ section.settings.link_url }}" target="_blank">{{ section.settings.link_text }}</a>
        </div>
      </div>
  
      <div class="research-block__right">
        {% if section.settings.image != blank %}
          <img
            src="{{ section.settings.image | image_url: width: 500 }}"
            width="500"
            height="500"
            loading="lazy"
            alt="Research image"
            class="research-block__image"
          >
        {% endif %}
        {% if section.settings.title_overlay != blank or section.settings.content_overlay != blank %}
          <div class="research-block__overlay">
            <h3>{{ section.settings.title_overlay }}</h3>
            <div class="rte">{{ section.settings.content_overlay }}</div>
          </div>
        {% endif %}
      </div>
    </div>
  </div>
  
  <style>
    .research-block {
      margin-bottom: 60px;
    }
  
    .research-block__container {
      max-width: 1160px;
      padding: 60px;
      margin: 0 auto;
      background: #F0F4F5;
      border-radius: 20px;
      display: flex;
      gap: 20px;
      flex-wrap: wrap;
      justify-content: space-between;
    }
  
    .research-block__left {
      width: 520px;
    }
  
    .research-block__divider {
      height: 1px;
      background: #D7D7D7;
      max-width: 480px;
      margin: 20px 0 30px 0;
    }
  
    .research-block__heading {
      font-family: var(--font-heading-main);
      font-size: 20px;
      font-weight: 700;
      line-height: 24px;
      letter-spacing: 0;
      color: #1F1F21;
    }
  
    .research-block__group {
      margin-bottom: 16px;
    }
  
    .research-block__group:last-child {
      margin-bottom: 0;
    }
  
    .research-block__group h3 {
      font-family: var(--font-heading-main);
      margin-bottom: 12px;
      font-size: 14px;
      line-height: 14px;
      font-weight: 700;
      letter-spacing: 0;
      color: #1F1F21;
    }
  
    .research-block__right {
      position: relative;
      width: 500px;
      height: 500px;
    }
  
    .research-block__image {
      width: 100%;
      height: 100%;
      object-fit: cover;
      border-radius: 20px;
    }
  
    .research-block__overlay {
      position: absolute;
      bottom: -70px;
      max-width: 460px;
      width: 100%;
      background-color: #1F1F21;
      color: white;
      padding: 20px;
      border-radius: 20px;
      left: 50%;
      transform: translateX(-50%);
    }
  
    .research-block__overlay h3 {
      font-family: var(--font-heading-main);
      margin-bottom: 12px;
      font-size: 14px;
      line-height: 14px;
      font-weight: 700;
      letter-spacing: 0;
      color: #fff;
    }
  
    .research-block__group .rte p,
    .research-block__group .rte ul li,
    .research-block__group a{
      font-size: 12px;
      line-height: 16px;
      letter-spacing: 0;
      max-width: 455px;
      text-decoration: none;
      color: #1F1F21;
    }
  
    .research-block__overlay .rte p{
      font-size: 12px;
      line-height: 16px;
      letter-spacing: 0;
      color: #fff;
    }
  
    @media(max-width: 749px) {
      .research-block {
        padding: 0 10px;
      }
      
      .research-block__container {
        padding: 40px 10px 110px;
      }
  
      .research-block__overlay {
        max-width: 318px;
      }
  
      .research-block__heading {
        font-size: 16px;
        line-height: 20px;
      }
  
      .research-block__group h3 {
        font-size: 12px;
        line-height: 13px;
      }
  
      .research-block__divider {
        margin: 30px 0 30px 0;
      }
  
      .research-block__right {
        width: 100%;
        aspect-ratio: 1 / 1;
        height: auto;
      }
    }

@media (min-width: 750px) and (max-width: 1160px) {

  .research-block {
    padding: 0 10px;
  }
  .research-block__container {
    display: grid;
    grid-template-columns: minmax(320px, 52%) minmax(280px, 48%);
    gap: 24px;
    padding: 40px 24px 100px;
    align-items: center;
  }

  .research-block__left,
  .research-block__right {
    width: auto;
  }

  .research-block__divider {
    max-width: 100%;
  }

  .research-block__right {
    position: relative;
    height: auto;
    aspect-ratio: 1 / 1;
  }
  .research-block__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 20px;
  }

  .research-block__overlay {
    bottom: -56px;
    left: 50%;
    transform: translateX(-50%);
    width: clamp(280px, 88%, 520px);
    max-width: none;
    padding: 16px 18px;
    border-radius: 16px;
  }

  .research-block__heading {
    font-size: 18px;
    line-height: 22px;
  }
  .research-block__group h3 {
    font-size: 13px;
    line-height: 14px;
    margin-bottom: 10px;
  }
  .research-block__group .rte p,
  .research-block__group .rte ul li,
  .research-block__group a {
    max-width: none; 
  }
}

  </style>
  
