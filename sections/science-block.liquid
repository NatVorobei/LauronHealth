<div class="science-wrapper">
  <div class="science-container">
    <div class="science-content">
      {% if section.settings.title != blank %}
        <h2 class="science-title">
          {{ section.settings.title }}
        </h2>
      {% endif %}
      <div class="science-text">
        {{ section.settings.text }}
      </div>
    </div>
    <div class="science-divider"> </div>
    <div class="science-images">
      {% if section.settings.image_top %}
        <div class="science-image top">
          <img src="{{ section.settings.image_top | image_url: width: 600 }}" alt="Science image top" loading="lazy">
        </div>
      {% endif %}
      {% if section.settings.image_middle %}
        <div class="science-image middle">
          <img src="{{ section.settings.image_middle | image_url: width: 600 }}" alt="Science image middle" loading="lazy">
        </div>
      {% endif %}
      {% if section.settings.image_bottom %}
        <div class="science-image bottom">
          <img src="{{ section.settings.image_bottom | image_url: width: 600 }}" alt="Science image bottom" loading="lazy">
        </div>
      {% endif %}
    </div>
  </div>
</div>

<style>
  .science-container {
    display: flex;
    max-width: 1280px;
    margin: 0 auto;
    justify-content: space-between;
    align-items: stretch;
  }

  .science-content {
    max-width: 720px;
    border-bottom: 1px solid #1F1F21;
    padding-bottom: 60px;
    padding-top: 80px;
  }

  .science-title {
    font-size: 30px;
    line-height: 30px;
    font-weight: 700;
    color: #1F1F21;
    margin-bottom: 40px;
  }

  .science-text {
    font-size: 20px;
    line-height: 28px;
    color: #1F1F21;
  }

  .science-divider {
    width: 1px;
    background-color: #D7D7D7;
  }

  .science-images {
    display: flex;
    flex-direction: column;
    gap: 270px;
    align-items: center;
    justify-content: flex-start;
    padding-top: 80px;
  }

  .science-image {
    max-width: 340px;
  }

  .science-image img {
    width: 100%;
    height: auto;
    border-radius: 20px;
    display: block;
    aspect-ratio: 3 / 2;
    object-fit: cover;
  }

  @media (max-width: 749px) {
    .science-title {
      font-size: 20px;
      line-height: 26px;
      margin-bottom: 26px;
    }

    .science-text {
      font-size: 16px;
      line-height: 22px;
    }

    .science-container {
      padding: 0 14px;
    }

    .science-image {
      max-width: 100%;
    }

    .science-content {
      padding-bottom: 0;
      border-bottom: none;
    }

    .science-images {
      padding-top: 30px;
    }
  }

  @media (max-width: 989px) {
    .science-container {
      flex-direction: column;
    }
  }

  @media (max-width: 1279px) {
    .science-divider {
      display: none;
    }

    .science-images {
      gap: 20px;
    }
  }
</style>

{% schema %}
{
  "name": "Simple Science Block",
  "tag": "section",
  "class": "science-block",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Заголовок",
      "default": "Новий формат добавок"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Опис",
      "default": "<p>Ваш текст тут...</p>"
    },
    {
      "type": "image_picker",
      "id": "image_top",
      "label": "Верхнє зображення"
    },
    {
      "type": "image_picker",
      "id": "image_middle",
      "label": "Середнє зображення"
    },
    {
      "type": "image_picker",
      "id": "image_bottom",
      "label": "Нижнє зображення"
    }
  ],
  "presets": [
    {
      "name": "Science Block"
    }
  ]
}
{% endschema %}