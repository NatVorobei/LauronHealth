{% comment %} <script src="{{ 'product-form.js' | asset_url }}" defer="defer"></script>
<script src="{{ 'sticky-cart.js' | asset_url }}" defer="defer"></script>

{% if product %}
  {% assign current_variant = product.selected_or_first_available_variant %}

  <div id="sticky-add-to-cart" class="sticky-cart-wrapper">
    <div class="sticky-add-to-cart__container">
      <div class="product-info">
        <img src="{{ product.featured_image | image_url: width: 100 }}" alt="{{ product.title }}" class="product-image">
        <div class="text-content">
          <h4 class="product-title">{{ product.title }}</h4>
          {% if product.description != blank %}
            <p class="product-description">{{ product.description | strip_html | truncatewords: 15 }}</p>
          {% endif %}
        </div>
      </div>

      <div class="subscription-and-cart">
        <div class="smart-subscription-widget" data-product-id="{{ product.id }}"></div>

        <div class="custom-subscription-wrapper">
          <select id="custom-subscription-select" name="custom_selling_plan" class="custom-subscription-select">
            <option value="">One-time purchase</option>
          </select>
          <span class="custom-select-icon">{{ 'faqs-caret.svg' | inline_asset_content }}</span>
        </div>

        <product-form data-section-id="{{ section.id }}" class="custom-product-form">
          {% form 'product', product, class: 'product-form', data-type: 'add-to-cart-form' %}
            <input
              type="hidden"
              name="id"
              value="{{ current_variant.id }}"
              class="product-variant-id"
              {% unless current_variant.available %}
                disabled
              {% endunless %}
            >

            <button
              type="submit"
              name="add"
              class="two-product-card__actions-button add-to-cart-button"
              aria-live="polite"
              {% unless current_variant.available %}
                disabled
              {% endunless %}
            >
              {{ 'lauron-cart.svg' | inline_asset_content }}
              <span>
                {% if current_variant.available %}
                  {{ 'products.product.add_to_cart' | t }}
                {% else %}
                  {{ 'products.product.sold_out' | t }}
                {% endif %}
              </span>
              <span class="sold-out-message hidden">
                {{ 'products.product.sold_out' | t }}
              </span>
              {% render 'loading-spinner' %}
            </button>
          {% endform %}
        </product-form>
      </div>
    </div>
  </div>
{% endif %}

<style>
  #sticky-add-to-cart {
    display: none;
    opacity: 0;
    transition: opacity 0.3s ease;
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    background: var(--color-main-text);
    color: white;
    z-index: 999;
  }

  #sticky-add-to-cart.show {
    display: block;
    opacity: 1;
  }

  .sticky-add-to-cart__container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 1rem;
    max-width: 1280px;
    width: 100%;
    margin: 0 auto;
  }

  .product-info {
    display: flex;
    align-items: center;
    gap: 1rem;
    flex: 1;
  }

  .product-image {
    max-width: 100px;
    height: auto;
    border-radius: 4px;
  }

  .text-content {
    max-width: 215px;
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .product-title {
    font-size: 18px;
    line-height: 18px;
    font-family: var(--font-heading-main);
    font-weight: 700;
    color: #fff;
    margin: 0;
    white-space: nowrap;
  }

  .product-description {
    font-size: 10px;
    line-height: 12px;
    color: #fff;
  }

  .subscription-and-cart {
    display: flex;
    align-items: center;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .add-to-cart-button {
      display: flex;
      align-items: center;
      gap: 16px;
      background: none;
      color: #fff;
      padding: 15px 30px;
      border: 1px solid #fff;
      border-radius: 20px;
      cursor: pointer;
      font-weight: bold;
      font-size: 14px;
      line-height: 12px;
      text-transform: uppercase;
  }

  .custom-subscription-wrapper {
    position: relative;
    display: flex;
    flex-direction: column;
    gap: 4px;
    color: #fff;
    min-width: 220px;
  }

  .custom-subscription-select {
    padding: 17px 30px;
    border-radius: 20px;
    font-size: 14px;
    border: 1px solid #fff;
    background: none;
    color: #fff;
    font-weight: 600;
    padding-right: 45px;
  }

  .custom-select-icon {
    position: absolute;
    right: 20px;
    color: white;
    top: 50%;
    transform: translateY(-50%) rotate(0deg);
    pointer-events: none;
  }

  .custom-select-icon svg {
    color: #fff;
  }

  .custom-subscription-select {
    background-color: var(--color-main-text);
    color: #fff;
    -webkit-appearance: none;
    -moz-appearance: none;
    appearance: none;
  }

  .custom-subscription-select option {
    background-color: var(--color-main-text);
    color: #fff;
  }

  .custom-subscription-select.open + .custom-select-icon {
    transform: translateY(-50%) rotate(180deg);
  }

  @media screen and (max-width: 749px) {
  #sticky-add-to-cart {
    padding: 10px 15px;
  }

  .sticky-add-to-cart__container {
    flex-direction: column;
    align-items: flex-start;
    gap: 1rem;
  }

  .product-info {
    display: none;
  }

  .product-image {
    max-width: 60px;
  }

  .text-content {
    max-width: 100%;
  }

  .product-title {
    font-size: 16px;
    line-height: 1.2;
  }

  .product-description {
    font-size: 10px;
    line-height: 1.3;
  }

  .subscription-and-cart {
    width: 100%;
    flex-wrap: nowrap;
    {% comment %} flex-direction: column; {% endcomment %}
    align-items: stretch;
  }

  .custom-subscription-wrapper {
    width: 100%;
    flex: 1;
  }

  .custom-subscription-select {
    height: 60px;
    white-space: normal;
    word-wrap: break-word;
    line-height: 1.3;
    padding: 14px 14px;
    font-size: 12px;
  }

  .custom-select-icon {
    top: 37%;
    transform: translateY(-50%) rotate(0deg);
  }

  .subscription-and-cart {
    align-items: stretch;
  }

  .add-to-cart-button {
    height: 60px;
    justify-content: center;
    padding: 14px;
    font-size: 12px;
    line-height: 15px;
    gap: 10px;
  }
}

</style>

