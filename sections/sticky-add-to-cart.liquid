  <div id="sticky-add-to-cart" class="sticky-cart-wrapper">
    <div class="sticky-add-to-cart__container">
      <!-- Ліва частина: зображення + заголовок + короткий опис -->
      <div class="product-info">
        <img src="{{ product.featured_image | image_url: width: 72 }}" alt="{{ product.title }}" class="product-image" width="72" height="auto" loading="lazy">
        <div class="text-content">
          <h4 class="product-title">{{ product.title }}</h4>
          {% if product.description != blank %}
            <p class="product-description">{{ product.description | strip_html | truncatewords: 20 }}</p>
